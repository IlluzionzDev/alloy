{
  "name": "alloy",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=Infinity build",
    "watch": "concurrently --kill-others \"tsc -b --watch\" \"pnpm run --parallel -r watch\"",
    "format": "pnpm run prettier --write",
    "format:check": "pnpm run prettier --check",
    "prettier": "prettier --config ./.prettierrc.yaml **/*.{ts,js,tsx,jsx,mjs,json,yml,yaml,md}"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.23"
    }
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "babel-preset-alloy": "workspace:~",
    "concurrently": "^8.2.2",
    "vitest": "^1.6.0"
  }
}
